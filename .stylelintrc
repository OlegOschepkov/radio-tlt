{
  "extends": "stylelint-config-recommended",
  "rules": {
    "declaration-no-important": true,
    "indentation": [
      2,
      {
        "ignore": [
          "inside-parens"
        ]
      }
    ],
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["extends"]
      }
    ],
    "no-invalid-position-at-import-rule": null,
    "max-nesting-depth": 4,
    "number-max-precision": 3
  },
  "ignoreFiles": [
    "source/sass/vendor/*.*"
  ]
}
